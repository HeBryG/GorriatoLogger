{
  "private": true,
  "name": "gorriato-logger",
  "description": "Logbook companion for GorriatoQRP",
  "version": "1.0.0",
  "author": "EA4IIF<hectorberryg@gmail.com>",
  "main": "dist/main/background.js",
  "scripts": {
    "dev": "nextron",
    "build": "nextron build",
    "build:mac:universal": "nextron build --mac --universal",
    "build:linux": "nextron build --linux",
    "build:win32": "nextron build --win --ia32",
    "build:win64": "nextron build --win --x64",
    "postinstall": "electron-builder install-app-deps"
  },

  "build": {
    "appId": "com.yourcompany.gorriatologger",
    "productName": "Gorriato Logger",
    "files": [
      "*"
    ],
    "directories": {
      "output": "release"
    },
    "win": {
      "target": "nsis",
      "icon": "build/icon.ico"
    },
    "linux": {
      "target": "AppImage", 
      "icon": "build/icon.png"
    }
  },
  "dependencies": {
    "@emotion/react": "^11.14.0",
    "@emotion/styled": "^11.14.1",
    "@mui/material": "^7.3.1",
    "@mui/x-data-grid": "^8.9.2",
    "better-sqlite3": "^12.2.0",
    "electron-serve": "^1.3.0",
    "electron-store": "^8.2.0",
    "react-flag-kit": "^1.1.1"
  },
  "devDependencies": {
    "@types/node": "^20.11.16",
    "@types/react": "^18.2.52",
    "autoprefixer": "^10.4.19",
    "electron": "^34.0.0",
    "electron-builder": "^24.13.3",
    "next": "^14.2.4",
    "nextron": "^9.5.0",
    "postcss": "^8.4.38",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "tailwindcss": "^3.4.3",
    "typescript": "^5.7.3"
  },
  "publish": {
    "provider": "github",
    "owner": "HeBryG",
    "repo": "GorriatoLogger"
  }
}
